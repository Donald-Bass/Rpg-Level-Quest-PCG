<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Facts="clr-namespace:PCG_GUI.Facts" xmlns:ViewModels="clr-namespace:PCG_GUI.ViewModels" mc:Ignorable="d" x:Class="PCG_GUI.MainWindow"
        Title="MainWindow" Height="882" Width="909" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="29,330,352,34" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <ItemsControl x:Name="LevelViewer" ItemsSource="{Binding levelGraphic}"
        		HorizontalAlignment="Left" Height="461" VerticalAlignment="Top" Width="507" Margin="0,0,-1,-1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>

            </ItemsControl>
        </Border>
        <Label Content="Map" HorizontalAlignment="Left" Margin="29,299,0,0" VerticalAlignment="Top"/>
        <Grid Margin="277,278,490,522">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="57*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="61*"/>
            </Grid.ColumnDefinitions>
            <Label Content="X Length:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.45,-0.038" Grid.ColumnSpan="2"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="8,3,0,0" TextWrapping="Wrap" Text="{Binding X_Dimension}" VerticalAlignment="Top" Width="57" Focusable="False" IsEnabled="False" Grid.Column="1" Grid.ColumnSpan="2"/>
        </Grid>
        <Grid Margin="416,278,352,522">
            <Label Content="Y Length:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.45,-0.038"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="64,3,0,0" TextWrapping="Wrap" Text="{Binding Y_Dimension}" VerticalAlignment="Top" Width="57" Focusable="False" IsEnabled="False"/>
        </Grid>

        <Menu Width="901" Margin="0,0,0,823" HorizontalAlignment="Left" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="Menu_New" />
                <MenuItem Header="_Open" Click="Menu_Open" />
                <MenuItem Header="_Save" Click="Menu_Save" />
                <MenuItem Header="_Close" Click="Menu_Close" />
            </MenuItem>
        </Menu>
        <Grid Margin="571,330,248,460">
            <RadioButton x:Name="InteriorButton" Content="Interior" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="LevelType" IsChecked="{Binding levelInterior}" Checked="InteriorButton_Checked" IsEnabled="{Binding worldAttached}"/>
            <RadioButton x:Name="ExteriorButton" Content="Exterior" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" GroupName="LevelType" IsChecked="{Binding levelExterior}" Checked="ExteriorButton_Checked" IsEnabled="{Binding worldAttached}"/>
        </Grid>

        <ListView ItemsSource="{Binding levelList}" Margin="29,51,688,620" SelectedIndex="{Binding selectedLevel}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="40" Header="Level" 
              DisplayMemberBinding="{Binding levelNumber}"  />
                    <GridViewColumn Width="140" Header="Name"  
              DisplayMemberBinding="{Binding levelName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="130" Margin="265,82,0,0" VerticalAlignment="Top" Width="199">
            <Grid>
                <Label Content="X Size" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="NewLevelSizeX" HorizontalAlignment="Left" Height="23" Margin="68,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Label Content="Y Size" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="NewLevelSizeY" HorizontalAlignment="Left" Height="23" Margin="68,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="CreateLevel" Content="Create New Level" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Margin="10,93,0,0" Click="CreateLevel_Click" IsEnabled="{Binding worldAttached}"/>
            </Grid>
        </Border>
        <Label Content="Add Level" HorizontalAlignment="Left" Margin="265,51,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="91" Margin="571,392,0,0" VerticalAlignment="Top" Width="244">
            <Grid>
                <RadioButton x:Name="Floor_Mode" Content="Floors" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" GroupName="EditType" IsChecked="{Binding editFloor}" IsEnabled="{Binding worldAttached}"/>
                <RadioButton x:Name="Add_Walls_Mode" Content="Add Walls" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" GroupName="EditType" IsEnabled="{Binding worldAttached}" IsChecked="{Binding addWalls}"/>
                <RadioButton x:Name="Remove_Walls_Mode" Content="Remove Walls" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" GroupName="EditType" IsEnabled="{Binding worldAttached}" IsChecked="{Binding removeWalls}"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="91" Margin="571,533,0,0" VerticalAlignment="Top" Width="244">
            <Grid>
                <RadioButton x:Name="Floor_Mode2" Content="Floor" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" GroupName="Floor Type" IsChecked="{Binding floorTiles}" IsEnabled="{Binding editFloor}"/>
                <RadioButton x:Name="Blocked_Mode" Content="Blocked" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" GroupName="Floor Type" IsChecked="{Binding blockedTiles}" IsEnabled="{Binding editFloor}"/>
                <RadioButton x:Name="Undefined_Mode" Content="Undefined" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" GroupName="Floor Type" IsEnabled="{Binding editFloor}" IsChecked="{Binding undefinedTiles}"/>
            </Grid>
        </Border>
    </Grid>


</Window>
